<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Apartment #<%= @apartment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/apartments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/apartments/<%= @apartment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit apartment
        </a>
      </div>

      <div class="col">
        <a href="/delete_apartment/<%= @apartment.id %>" class="btn btn-block btn-outline-secondary">
          Delete apartment
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @apartment.user.present? %>
          <a href="/users/<%= @apartment.user_id %>">
            <%= @apartment.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @apartment.description %>
      </dd>

      <dt>
        Floor plan
      </dt>
      <dd>
        <img src="<%= @apartment.floor_plan %>" class="img-fluid">
      </dd>

      <dt>
        Building
      </dt>
      <dd>
        <% if @apartment.building.present? %>
          <a href="/buildings/<%= @apartment.building_id %>">
            <%= @apartment.building.apartment_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Bedrooms
      </dt>
      <dd>
        <%= @apartment.bedrooms %>
      </dd>

      <dt>
        Bathrooms
      </dt>
      <dd>
        <%= @apartment.bathrooms %>
      </dd>

      <dt>
        Sq footage
      </dt>
      <dd>
        <%= @apartment.sq_footage %>
      </dd>

      <dt>
        Orientation
      </dt>
      <dd>
        <%= @apartment.orientation %>
      </dd>

      <dt>
        Floor
      </dt>
      <dd>
        <%= @apartment.floor %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@apartment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@apartment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "apartment_templates/apartment_apartment_photos" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "apartment_templates/apartment_apartment_bookmarks" %>
  </div>
</div>
