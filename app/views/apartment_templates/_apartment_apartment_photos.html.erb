<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Apartment Photos

    <a data-toggle="collapse" href="#apartment_apartment_photos_new_form">
      Add apartment photo
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @apartment.apartment_photos.each do |apartment_photo| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/apartment_photos/<%= apartment_photo.id %>">
          <%= apartment_photo.description %>
        </a>

        <a href="/delete_apartment_photo_from_apartment/<%= apartment_photo.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="apartment_apartment_photos_new_form">
        <%= render partial: "apartment_templates/apartment_apartment_photos_new_form" %>
      </div>
    </div>

  </ul>
</div>
