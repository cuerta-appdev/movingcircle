<% if @apartment.errors.any? %>
  <% @apartment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit apartment #<%= @apartment.id %>
</h1>

<hr>

<form action="/update_apartment/<%= @apartment.id %>" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @apartment.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @apartment.description %>">
  </div>

  <div class="form-group">
    <label for="floor_plan">
      Floor plan
    </label>

    <%= cl_image_tag(@apartment.floor_plan.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="floor_plan" name="floor_plan" class="form-control">
  </div>

  <div class="form-group">
    <label for="building_id">
      Building
    </label>

    <%= select_tag(:building_id, options_from_collection_for_select(Building.all, :id, :apartment_id, @apartment.building_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="bedrooms">
      Bedrooms
    </label>

    <input type="text" id="bedrooms" name="bedrooms" class="form-control" value="<%= @apartment.bedrooms %>">
  </div>

  <div class="form-group">
    <label for="bathrooms">
      Bathrooms
    </label>

    <input type="text" id="bathrooms" name="bathrooms" class="form-control" value="<%= @apartment.bathrooms %>">
  </div>

  <div class="form-group">
    <label for="sq_footage">
      Sq footage
    </label>

    <input type="text" id="sq_footage" name="sq_footage" class="form-control" value="<%= @apartment.sq_footage %>">
  </div>

  <div class="form-group">
    <label for="orientation">
      Orientation
    </label>

    <input type="text" id="orientation" name="orientation" class="form-control" value="<%= @apartment.orientation %>">
  </div>

  <div class="form-group">
    <label for="floor">
      Floor
    </label>

    <input type="text" id="floor" name="floor" class="form-control" value="<%= @apartment.floor %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update apartment
  </button>
</form>

<hr>

<a href="/apartments">
  Go back
</a>
