<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Furniture Packs

    <a data-toggle="collapse" href="#apartment_furniture_packs_new_form">
      Add furniture pack
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @apartment.furniture_packs.each do |furniture_pack| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/furniture_packs/<%= furniture_pack.id %>">
          <%= furniture_pack.description %>
        </a>

        <%if current_user == furniture_pack.user %>
          <a href="/delete_furniture_pack_from_apartment/<%= furniture_pack.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="apartment_furniture_packs_new_form">
        <%= render partial: "apartment_templates/apartment_furniture_packs_new_form" %>
      </div>
    </div>

  </ul>
</div>
