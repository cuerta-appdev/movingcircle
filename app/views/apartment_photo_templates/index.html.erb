<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All apartment photos
    </h1>

    <a href="/apartment_photos/new" class="btn btn-block btn-outline-secondary">
      Add a new apartment photo
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Apartment
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @apartment_photos.each do |apartment_photo| %>
      <tr>
        <!-- Display apartment_photo.id start -->
        <td>
          <%= apartment_photo.id %>
        </td>
        <!-- Display apartment_photo.id end -->

        <!-- Display apartment_photo.description start -->
        <td>
          <%= apartment_photo.description %>
        </td>
        <!-- Display apartment_photo.description end -->

        <!-- Display apartment_photo.apartment_id start -->
        <td>
          <%= apartment_photo.apartment.user_id %>
        </td>
        <!-- Display apartment_photo.apartment_id end -->

        <!-- Display apartment_photo.photo start -->
        <td>
          <img src='<%= apartment_photo.photo %>' class='img-fluid'>
        </td>
        <!-- Display apartment_photo.photo end -->

        <!-- Display apartment_photo.created_at start -->
        <td>
          <%= time_ago_in_words(apartment_photo.created_at) %> ago
        </td>
        <!-- Display apartment_photo.created_at end -->

        <!-- Display apartment_photo.updated_at start -->
        <td>
          <%= time_ago_in_words(apartment_photo.updated_at) %> ago
        </td>
        <!-- Display apartment_photo.updated_at end -->

        <td>
          <a href="/apartment_photos/<%= apartment_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
