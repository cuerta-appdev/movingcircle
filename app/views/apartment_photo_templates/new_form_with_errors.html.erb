<% if @apartment_photo.present? %>
  <% if @apartment_photo.errors.any? %>
    <% @apartment_photo.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new apartment photo
</h1>


<hr>

<form action="/create_apartment_photo" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @apartment_photo.description %>">
  </div>

  <div class="form-group">
    <label for="apartment_id">
      Apartment
    </label>

    <%= select_tag(:apartment_id, options_from_collection_for_select(Apartment.all, :id, :user_id, @apartment_photo.apartment_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="photo">
      Photo
    </label>

    <input type="file" id="photo" name="photo" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create apartment photo
  </button>
</form>

<hr>

<a href="/apartment_photos">
  Go back
</a>
