<% if @furniture_object_picture.present? %>
  <% if @furniture_object_picture.errors.any? %>
    <% @furniture_object_picture.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new furniture object picture
</h1>


<hr>

<form action="/create_furniture_object_picture" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="picture">
      Picture
    </label>

    <input type="file" id="picture" name="picture" class="form-control">
  </div>

  <div class="form-group">
    <label for="furniture_object_id">
      Furniture object
    </label>

    <%= select_tag(:furniture_object_id, options_from_collection_for_select(FurtnitureObject.all, :id, :price, @furniture_object_picture.furniture_object_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create furniture object picture
  </button>
</form>

<hr>

<a href="/furniture_object_pictures">
  Go back
</a>
