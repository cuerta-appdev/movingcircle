<h1>
  Edit furniture object picture #<%= @furniture_object_picture.id %>
</h1>

<hr>

<form action="/update_furniture_object_picture/<%= @furniture_object_picture.id %>" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="picture">
      Picture
    </label>

    <%= cl_image_tag(@furniture_object_picture.picture.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="picture" name="picture" class="form-control">
  </div>

  <div class="form-group">
    <label for="furniture_object_id">
      Furniture object
    </label>

    <%= select_tag(:furniture_object_id, options_from_collection_for_select(FurtnitureObject.all, :id, :price, @furniture_object_picture.furniture_object_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update furniture object picture
  </button>
</form>

<hr>

<a href="/furniture_object_pictures">
  Go back
</a>
