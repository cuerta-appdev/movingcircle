<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All furniture object pictures
    </h1>

    <a href="/furniture_object_pictures/new" class="btn btn-block btn-outline-secondary">
      Add a new furniture object picture
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "furniture_object_picture_templates/furniture_object_pictures_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Picture
        </th>

        <th>
          Furniture object
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @furniture_object_pictures.each do |furniture_object_picture| %>
      <tr>
        <td>
          <%= furniture_object_picture.id %>
        </td>

        <td>
          <img src='<%= furniture_object_picture.picture %>' class='img-fluid'>
        </td>

        <td>
          <% if furniture_object_picture.furniture_object.present? %>
            <a href="/furtniture_objects/<%= furniture_object_picture.furniture_object.id %>">
              <%= furniture_object_picture.furniture_object.price %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(furniture_object_picture.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(furniture_object_picture.updated_at) %> ago
        </td>

        <td>
          <a href="/furniture_object_pictures/<%= furniture_object_picture.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @furniture_object_pictures, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
