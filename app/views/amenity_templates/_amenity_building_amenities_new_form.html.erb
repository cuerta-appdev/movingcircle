<!-- Form building_amenity start -->
<form action="/create_building_amenity_from_amenity" method="post">
<!-- Form building_amenity end -->

  <!-- Label and input for building_id start -->
  <div class="form-group">
    <label for="building_id">
      Building
    </label>

    <!-- Input for building_id start -->
    <input type="text" id="building_id" name="building_id" class="form-control" value="<%= @building_amenity.building_id %>">
    <!-- Input for building_id end -->
  </div>
  <!-- Label and input for building_id end -->

  <!-- Label and input for amenity_id start -->
  <!-- Input for amenity_id start -->
  <input type="hidden" name="amenity_id" value="<%= @amenity.id %>">
  <!-- Input for amenity_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create building amenity
  </button>
</form>
