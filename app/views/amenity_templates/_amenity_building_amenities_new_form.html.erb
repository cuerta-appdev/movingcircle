<form action="/create_building_amenity_from_amenity" method="post">

  <div class="form-group">
    <label for="building_id">
      Building
    </label>

    <%= select_tag(:building_id, options_from_collection_for_select(Building.all, :id, :apartment_id, @building_amenity.building_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="amenity_id" value="<%= @amenity.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create building amenity
  </button>
</form>
