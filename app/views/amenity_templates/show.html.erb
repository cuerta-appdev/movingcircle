<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Amenity #<%= @amenity.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/amenities" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link amenity start -->
      <div class="col">
        <a href="/amenities/<%= @amenity.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit amenity
        </a>
      </div>
      <!-- Edit link amenity end -->

      <!-- Delete link amenity start -->
      <div class="col">
        <a href="/delete_amenity/<%= @amenity.id %>" class="btn btn-block btn-outline-secondary">
          Delete amenity
        </a>
      </div>
      <!-- Delete link amenity end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @amenity.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Category
      </dt>
      <!-- Display category start -->
      <dd>
        <%= @amenity.category %>
      </dd>
      <!-- Display category end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@amenity.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@amenity.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
