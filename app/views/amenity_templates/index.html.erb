<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All amenities
    </h1>

    <a href="/amenities/new" class="btn btn-block btn-outline-secondary">
      Add a new amenity
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @amenities.each do |amenity| %>
      <tr>
        <!-- Display amenity.id start -->
        <td>
          <%= amenity.id %>
        </td>
        <!-- Display amenity.id end -->

        <!-- Display amenity.name start -->
        <td>
          <%= amenity.name %>
        </td>
        <!-- Display amenity.name end -->

        <!-- Display amenity.category start -->
        <td>
          <%= amenity.category %>
        </td>
        <!-- Display amenity.category end -->

        <!-- Display amenity.created_at start -->
        <td>
          <%= time_ago_in_words(amenity.created_at) %> ago
        </td>
        <!-- Display amenity.created_at end -->

        <!-- Display amenity.updated_at start -->
        <td>
          <%= time_ago_in_words(amenity.updated_at) %> ago
        </td>
        <!-- Display amenity.updated_at end -->

        <td>
          <a href="/amenities/<%= amenity.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
