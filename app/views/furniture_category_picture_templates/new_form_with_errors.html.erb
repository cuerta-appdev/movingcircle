<% if @furniture_category_picture.present? %>
  <% if @furniture_category_picture.errors.any? %>
    <% @furniture_category_picture.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new furniture category picture
</h1>


<hr>

<form action="/create_furniture_category_picture" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="category_id">
      Category
    </label>

    <%= select_tag(:category_id, options_from_collection_for_select(FurnitureCategory.all, :id, :items, @furniture_category_picture.category_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="picture">
      Picture
    </label>

    <input type="file" id="picture" name="picture" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create furniture category picture
  </button>
</form>

<hr>

<a href="/furniture_category_pictures">
  Go back
</a>
