<h1>
  Edit furniture category picture #<%= @furniture_category_picture.id %>
</h1>

<hr>

<form action="/update_furniture_category_picture/<%= @furniture_category_picture.id %>" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="category_id">
      Category
    </label>

    <%= select_tag(:category_id, options_from_collection_for_select(FurnitureCategory.all, :id, :items, @furniture_category_picture.category_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="picture">
      Picture
    </label>

    <%= cl_image_tag(@furniture_category_picture.picture.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="picture" name="picture" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update furniture category picture
  </button>
</form>

<hr>

<a href="/furniture_category_pictures">
  Go back
</a>
