<h1>
  Edit pack comment #<%= @pack_comment.id %>
</h1>

<hr>

<form action="/update_pack_comment/<%= @pack_comment.id %>" method="post">

  <div class="form-group">
    <label for="furniture_pack_id">
      Furniture pack
    </label>

    <%= select_tag(:furniture_pack_id, options_from_collection_for_select(FurniturePack.all, :id, :description, @pack_comment.furniture_pack_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @pack_comment.user_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update pack comment
  </button>
</form>

<hr>

<a href="/pack_comments">
  Go back
</a>
