<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All pack comments
    </h1>

    <a href="/pack_comments/new" class="btn btn-block btn-outline-secondary">
      Add a new pack comment
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "pack_comment_templates/pack_comments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Furniture pack
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pack_comments.each do |pack_comment| %>
      <tr>
        <td>
          <%= pack_comment.id %>
        </td>

        <td>
          <% if pack_comment.pack.present? %>
            <a href="/furniture_packs/<%= pack_comment.pack.id %>">
              <%= pack_comment.pack.description %>
            </a>
          <% end %>
        </td>

        <td>
          <% if pack_comment.user.present? %>
            <a href="/users/<%= pack_comment.user.id %>">
              <%= pack_comment.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(pack_comment.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(pack_comment.updated_at) %> ago
        </td>

        <td>
          <a href="/pack_comments/<%= pack_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @pack_comments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
