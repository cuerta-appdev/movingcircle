<h1>
  Edit apartment bookmark #<%= @apartment_bookmark.id %>
</h1>

<hr>

<!-- Form apartment_bookmark start -->
<form action="/update_apartment_bookmark/<%= @apartment_bookmark.id %>" method="post">
<!-- Form apartment_bookmark end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @apartment_bookmark.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for apartment_id start -->
  <div class="form-group">
    <label for="apartment_id">
      Apartment
    </label>

    <!-- Input for apartment_id start -->
    <%= select_tag(:apartment_id, options_from_collection_for_select(Apartment.all, :id, :user_id, @apartment_bookmark.apartment_id), :class => "form-control") %>
    <!-- Input for apartment_id end -->
  </div>
  <!-- Label and input for apartment_id end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @apartment_bookmark.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update apartment bookmark
  </button>
</form>

<hr>

<a href="/apartment_bookmarks">
  Go back
</a>
