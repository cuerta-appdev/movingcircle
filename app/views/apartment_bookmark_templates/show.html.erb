<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Apartment bookmark #<%= @apartment_bookmark.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/apartment_bookmarks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/apartment_bookmarks/<%= @apartment_bookmark.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit apartment bookmark
        </a>
      </div>

      <div class="col">
        <a href="/delete_apartment_bookmark/<%= @apartment_bookmark.id %>" class="btn btn-block btn-outline-secondary">
          Delete apartment bookmark
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @apartment_bookmark.user.present? %>
          <a href="/users/<%= @apartment_bookmark.user_id %>">
            <%= @apartment_bookmark.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Apartment
      </dt>
      <dd>
        <% if @apartment_bookmark.apartment.present? %>
          <a href="/apartments/<%= @apartment_bookmark.apartment_id %>">
            <%= @apartment_bookmark.apartment.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @apartment_bookmark.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@apartment_bookmark.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@apartment_bookmark.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

