<!-- Form amenity_picture start -->
<form action="/create_amenity_picture" method="post" enctype="multipart/form-data">
<!-- Form amenity_picture end -->

  <!-- Label and input for picture start -->
  <div class="form-group">
    <label for="picture">
      Picture
    </label>

    <!-- Input for picture start -->
    <input type="file" id="picture" name="picture" class="form-control">
    <!-- Input for picture end -->
  </div>
  <!-- Label and input for picture end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @amenity_picture.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for building_amenity_id start -->
  <!-- Input for building_amenity_id start -->
  <input type="hidden" name="building_amenity_id" value="<%= @building_amenity.id %>">
  <!-- Input for building_amenity_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create amenity picture
  </button>
</form>
