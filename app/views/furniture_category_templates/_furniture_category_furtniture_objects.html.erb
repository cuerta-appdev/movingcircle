<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Furtniture Objects

    <a data-toggle="collapse" href="#furniture_category_furtniture_objects_new_form">
      Add furtniture object
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @furniture_category.furtniture_objects.each do |furtniture_object| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/furtniture_objects/<%= furtniture_object.id %>">
          <%= furtniture_object.price %>
        </a>

        <a href="/delete_furtniture_object_from_category/<%= furtniture_object.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="furniture_category_furtniture_objects_new_form">
        <%= render partial: "furniture_category_templates/furniture_category_furtniture_objects_new_form" %>
      </div>
    </div>

  </ul>
</div>
