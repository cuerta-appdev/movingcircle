<% if @furtniture_object.present? %>
  <% if @furtniture_object.errors.any? %>
    <% @furtniture_object.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new furtniture object
</h1>


<hr>

<form action="/create_furtniture_object" method="post">

  <div class="form-group">
    <label for="price">
      Price
    </label>

    <input type="text" id="price" name="price" class="form-control" value="<%= @furtniture_object.price %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @furtniture_object.description %>">
  </div>

  <div class="form-group">
    <label for="furniture_pack_id">
      Furniture pack
    </label>

    <%= select_tag(:furniture_pack_id, options_from_collection_for_select(FurniturePack.all, :id, :description, @furtniture_object.furniture_pack_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="category_id">
      Category
    </label>

    <%= select_tag(:category_id, options_from_collection_for_select(FurnitureCategory.all, :id, :items, @furtniture_object.category_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @furtniture_object.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create furtniture object
  </button>
</form>

<hr>

<a href="/furtniture_objects">
  Go back
</a>
