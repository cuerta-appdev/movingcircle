<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All furtniture objects
    </h1>

    <a href="/furtniture_objects/new" class="btn btn-block btn-outline-secondary">
      Add a new furtniture object
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "furtniture_object_templates/furtniture_objects_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Price
        </th>

        <th>
          Description
        </th>

        <th>
          Furniture pack
        </th>

        <th>
          Furniture category
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @furtniture_objects.each do |furtniture_object| %>
      <tr>
        <td>
          <%= furtniture_object.id %>
        </td>

        <td>
          <%= furtniture_object.price %>
        </td>

        <td>
          <%= furtniture_object.description %>
        </td>

        <td>
          <% if furtniture_object.furniture_pack.present? %>
            <a href="/furniture_packs/<%= furtniture_object.furniture_pack.id %>">
              <%= furtniture_object.furniture_pack.description %>
            </a>
          <% end %>
        </td>

        <td>
          <% if furtniture_object.category.present? %>
            <a href="/furniture_categories/<%= furtniture_object.category.id %>">
              <%= furtniture_object.category.items %>
            </a>
          <% end %>
        </td>

        <td>
          <%= furtniture_object.name %>
        </td>

        <td>
          <%= time_ago_in_words(furtniture_object.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(furtniture_object.updated_at) %> ago
        </td>

        <td>
          <a href="/furtniture_objects/<%= furtniture_object.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @furtniture_objects, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
