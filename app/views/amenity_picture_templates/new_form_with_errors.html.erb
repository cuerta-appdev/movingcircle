<!-- Validation failure messages -->
<% if @amenity_picture.present? %>
  <% if @amenity_picture.errors.any? %>
    <% @amenity_picture.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new amenity picture
</h1>


<hr>

<!-- Form amenity_picture start -->
<form action="/create_amenity_picture" method="post">
<!-- Form amenity_picture end -->

  <!-- Label and input for picture start -->
  <div class="form-group">
    <label for="picture">
      Picture
    </label>

    <!-- Input for picture start -->
    <input type="text" id="picture" name="picture" class="form-control" value="<%= @amenity_picture.picture %>">
    <!-- Input for picture end -->
  </div>
  <!-- Label and input for picture end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @amenity_picture.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for building_amenity_id start -->
  <div class="form-group">
    <label for="building_amenity_id">
      Building amenity
    </label>

    <!-- Input for building_amenity_id start -->
    <input type="text" id="building_amenity_id" name="building_amenity_id" class="form-control" value="<%= @amenity_picture.building_amenity_id %>">
    <!-- Input for building_amenity_id end -->
  </div>
  <!-- Label and input for building_amenity_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create amenity picture
  </button>
</form>

<hr>

<a href="/amenity_pictures">
  Go back
</a>
