<h1>
  Edit amenity picture #<%= @amenity_picture.id %>
</h1>

<hr>

<form action="/update_amenity_picture/<%= @amenity_picture.id %>" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="picture">
      Picture
    </label>

    <%= cl_image_tag(@amenity_picture.picture.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="picture" name="picture" class="form-control">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @amenity_picture.description %>">
  </div>

  <div class="form-group">
    <label for="building_amenity_id">
      Building amenity
    </label>

    <%= select_tag(:building_amenity_id, options_from_collection_for_select(BuildingAmenity.all, :id, :building_id, @amenity_picture.building_amenity_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update amenity picture
  </button>
</form>

<hr>

<a href="/amenity_pictures">
  Go back
</a>
