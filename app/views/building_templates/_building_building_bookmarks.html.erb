<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Building Bookmarks

    <a data-toggle="collapse" href="#building_building_bookmarks_new_form">
      Add building bookmark
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @building.building_bookmarks.each do |building_bookmark| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/building_bookmarks/<%= building_bookmark.id %>">
          <%= building_bookmark.building_id %>
        </a>

        <a href="/delete_building_bookmark_from_building/<%= building_bookmark.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="building_building_bookmarks_new_form">
        <%= render partial: "building_templates/building_building_bookmarks_new_form" %>
      </div>
    </div>

  </ul>
</div>
