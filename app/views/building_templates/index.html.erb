<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All buildings
    </h1>

    <a href="/buildings/new" class="btn btn-block btn-outline-secondary">
      Add a new building
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "building_templates/buildings_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "building_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Apartment
        </th>

        <th>
          Address
        </th>

        <th>
          Neighborhood
        </th>

        <th>
          Contact info
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @buildings.each do |building| %>
      <tr>
        <td>
          <%= building.id %>
        </td>

        <td>
          <%= building.apartment_id %>
        </td>

        <td>
          <%= building.address %>
        </td>

        <td>
          <%= building.neighborhood %>
        </td>

        <td>
          <%= building.contact_info %>
        </td>

        <td>
          <%= time_ago_in_words(building.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(building.updated_at) %> ago
        </td>

        <td>
          <a href="/buildings/<%= building.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @buildings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
