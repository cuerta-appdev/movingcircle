<!-- Form building_bookmark start -->
<form action="/create_building_bookmark_from_building" method="post">
<!-- Form building_bookmark end -->

  <!-- Label and input for building_id start -->
  <!-- Input for building_id start -->
  <input type="hidden" name="building_id" value="<%= @building.id %>">
  <!-- Input for building_id end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @building_bookmark.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @building_bookmark.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create building bookmark
  </button>
</form>
