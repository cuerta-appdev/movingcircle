<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Apartments

    <a data-toggle="collapse" href="#building_apartments_new_form">
      Add apartment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @building.apartments.each do |apartment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/apartments/<%= apartment.id %>">
          <%= apartment.user_id %>
        </a>

        <a href="/delete_apartment_from_building/<%= apartment.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="building_apartments_new_form">
        <%= render partial: "building_templates/building_apartments_new_form" %>
      </div>
    </div>

  </ul>
</div>
