<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Pack bookmark #<%= @pack_bookmark.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/pack_bookmarks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/pack_bookmarks/<%= @pack_bookmark.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit pack bookmark
        </a>
      </div>

      <div class="col">
        <a href="/delete_pack_bookmark/<%= @pack_bookmark.id %>" class="btn btn-block btn-outline-secondary">
          Delete pack bookmark
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @pack_bookmark.user.present? %>
          <a href="/users/<%= @pack_bookmark.user_id %>">
            <%= @pack_bookmark.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Pack
      </dt>
      <dd>
        <% if @pack_bookmark.pack.present? %>
          <a href="/furniture_packs/<%= @pack_bookmark.pack_id %>">
            <%= @pack_bookmark.pack.description %>
          </a>
        <% end %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @pack_bookmark.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@pack_bookmark.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@pack_bookmark.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

