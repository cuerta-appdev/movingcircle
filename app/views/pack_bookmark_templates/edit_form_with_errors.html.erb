<!-- Validation failure messages -->
<% if @pack_bookmark.errors.any? %>
  <% @pack_bookmark.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit pack bookmark #<%= @pack_bookmark.id %>
</h1>

<hr>

<!-- Form pack_bookmark start -->
<form action="/update_pack_bookmark/<%= @pack_bookmark.id %>" method="post">
<!-- Form pack_bookmark end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @pack_bookmark.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for pack_id start -->
  <div class="form-group">
    <label for="pack_id">
      Pack
    </label>

    <!-- Input for pack_id start -->
    <input type="text" id="pack_id" name="pack_id" class="form-control" value="<%= @pack_bookmark.pack_id %>">
    <!-- Input for pack_id end -->
  </div>
  <!-- Label and input for pack_id end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @pack_bookmark.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update pack bookmark
  </button>
</form>

<hr>

<a href="/pack_bookmarks">
  Go back
</a>
