<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All pack bookmarks
    </h1>

    <a href="/pack_bookmarks/new" class="btn btn-block btn-outline-secondary">
      Add a new pack bookmark
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "pack_bookmark_templates/pack_bookmarks_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Pack
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pack_bookmarks.each do |pack_bookmark| %>
      <tr>
        <td>
          <%= pack_bookmark.id %>
        </td>

        <td>
          <% if pack_bookmark.user.present? %>
            <a href="/users/<%= pack_bookmark.user.id %>">
              <%= pack_bookmark.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if pack_bookmark.pack.present? %>
            <a href="/furniture_packs/<%= pack_bookmark.pack.id %>">
              <%= pack_bookmark.pack.description %>
            </a>
          <% end %>
        </td>

        <td>
          <%= pack_bookmark.name %>
        </td>

        <td>
          <%= time_ago_in_words(pack_bookmark.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(pack_bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/pack_bookmarks/<%= pack_bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @pack_bookmarks, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
