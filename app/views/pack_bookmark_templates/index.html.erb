<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All pack bookmarks
    </h1>

    <a href="/pack_bookmarks/new" class="btn btn-block btn-outline-secondary">
      Add a new pack bookmark
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Pack
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pack_bookmarks.each do |pack_bookmark| %>
      <tr>
        <!-- Display pack_bookmark.id start -->
        <td>
          <%= pack_bookmark.id %>
        </td>
        <!-- Display pack_bookmark.id end -->

        <!-- Display pack_bookmark.user_id start -->
        <td>
          <%= pack_bookmark.user.email %>
        </td>
        <!-- Display pack_bookmark.user_id end -->

        <!-- Display pack_bookmark.pack_id start -->
        <td>
          <%= pack_bookmark.pack.description %>
        </td>
        <!-- Display pack_bookmark.pack_id end -->

        <!-- Display pack_bookmark.name start -->
        <td>
          <%= pack_bookmark.name %>
        </td>
        <!-- Display pack_bookmark.name end -->

        <!-- Display pack_bookmark.created_at start -->
        <td>
          <%= time_ago_in_words(pack_bookmark.created_at) %> ago
        </td>
        <!-- Display pack_bookmark.created_at end -->

        <!-- Display pack_bookmark.updated_at start -->
        <td>
          <%= time_ago_in_words(pack_bookmark.updated_at) %> ago
        </td>
        <!-- Display pack_bookmark.updated_at end -->

        <td>
          <a href="/pack_bookmarks/<%= pack_bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @pack_bookmarks, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
