<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All furniture packs
    </h1>

    <a href="/furniture_packs/new" class="btn btn-block btn-outline-secondary">
      Add a new furniture pack
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          User
        </th>

        <th>
          Price
        </th>

        <th>
          Number of items
        </th>

        <th>
          Storage conditions
        </th>

        <th>
          Apartment sq footage
        </th>

        <th>
          Apartment number of bedrooms
        </th>

        <th>
          Apartment number of bathrooms
        </th>

        <th>
          Apartment building name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @furniture_packs.each do |furniture_pack| %>
      <tr>
        <!-- Display furniture_pack.id start -->
        <td>
          <%= furniture_pack.id %>
        </td>
        <!-- Display furniture_pack.id end -->

        <!-- Display furniture_pack.description start -->
        <td>
          <%= furniture_pack.description %>
        </td>
        <!-- Display furniture_pack.description end -->

        <!-- Display furniture_pack.user_id start -->
        <td>
          <%= furniture_pack.user.email %>
        </td>
        <!-- Display furniture_pack.user_id end -->

        <!-- Display furniture_pack.price start -->
        <td>
          <%= furniture_pack.price %>
        </td>
        <!-- Display furniture_pack.price end -->

        <!-- Display furniture_pack.number_of_items start -->
        <td>
          <%= furniture_pack.number_of_items %>
        </td>
        <!-- Display furniture_pack.number_of_items end -->

        <!-- Display furniture_pack.storage_conditions start -->
        <td>
          <%= furniture_pack.storage_conditions %>
        </td>
        <!-- Display furniture_pack.storage_conditions end -->

        <!-- Display furniture_pack.apartment_sq_footage start -->
        <td>
          <%= furniture_pack.apartment_sq_footage %>
        </td>
        <!-- Display furniture_pack.apartment_sq_footage end -->

        <!-- Display furniture_pack.apartment_number_of_bedrooms start -->
        <td>
          <%= furniture_pack.apartment_number_of_bedrooms %>
        </td>
        <!-- Display furniture_pack.apartment_number_of_bedrooms end -->

        <!-- Display furniture_pack.apartment_number_of_bathrooms start -->
        <td>
          <%= furniture_pack.apartment_number_of_bathrooms %>
        </td>
        <!-- Display furniture_pack.apartment_number_of_bathrooms end -->

        <!-- Display furniture_pack.apartment_building_name start -->
        <td>
          <%= furniture_pack.apartment_building_name %>
        </td>
        <!-- Display furniture_pack.apartment_building_name end -->

        <!-- Display furniture_pack.created_at start -->
        <td>
          <%= time_ago_in_words(furniture_pack.created_at) %> ago
        </td>
        <!-- Display furniture_pack.created_at end -->

        <!-- Display furniture_pack.updated_at start -->
        <td>
          <%= time_ago_in_words(furniture_pack.updated_at) %> ago
        </td>
        <!-- Display furniture_pack.updated_at end -->

        <td>
          <a href="/furniture_packs/<%= furniture_pack.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @furniture_packs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
