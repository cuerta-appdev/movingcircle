<%= search_form_for @q, :class => collapse_search_form, :id => "furniture_packs_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :apartment_building_name_cont, "Apartment building name contains" %>
    <%= f.text_field :apartment_building_name_cont, :class => "form-control", :placeholder => "Apartment building name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :apartment_number_of_bathrooms_cont, "Apartment number of bathrooms contains" %>
    <%= f.text_field :apartment_number_of_bathrooms_cont, :class => "form-control", :placeholder => "Apartment number of bathrooms contains" %>
  </div>

  <div class="form-group">
    <%= f.label :apartment_number_of_bedrooms_cont, "Apartment number of bedrooms contains" %>
    <%= f.text_field :apartment_number_of_bedrooms_cont, :class => "form-control", :placeholder => "Apartment number of bedrooms contains" %>
  </div>

  <div class="form-group">
    <%= f.label :apartment_sq_footage, "Apartment sq footage" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :apartment_sq_footage_gteq, :class => "form-control", :placeholder => "Apartment sq footage greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :apartment_sq_footage_lteq, :class => "form-control", :placeholder => "Apartment sq footage less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :storage_conditions_cont, "Storage conditions contains" %>
    <%= f.text_field :storage_conditions_cont, :class => "form-control", :placeholder => "Storage conditions contains" %>
  </div>

  <div class="form-group">
    <%= f.label :number_of_items, "Number of items" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :number_of_items_gteq, :class => "form-control", :placeholder => "Number of items greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :number_of_items_lteq, :class => "form-control", :placeholder => "Number of items less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, "Price" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :price_gteq, :class => "form-control", :placeholder => "Price greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :price_lteq, :class => "form-control", :placeholder => "Price less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "FurtnitureObject Price" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :furtniture_objects_price_gteq, :class => "form-control", :placeholder => "FurtnitureObject Price greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :furtniture_objects_price_lteq, :class => "form-control", :placeholder => "FurtnitureObject Price less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :furniture_categories_items_cont, "FurnitureCategory items contains" %>
    <%= f.text_field :furniture_categories_items_cont, :class => "form-control", :placeholder => "FurnitureCategory items contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/furniture_packs" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#furniture_packs_filters">
  Show filters
</a>
