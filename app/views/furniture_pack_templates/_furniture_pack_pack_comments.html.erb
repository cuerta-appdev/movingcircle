<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Pack Comments

    <a data-toggle="collapse" href="#furniture_pack_pack_comments_new_form">
      Add pack comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @furniture_pack.pack_comments.each do |pack_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/pack_comments/<%= pack_comment.id %>">
          <%= pack_comment.furniture_pack_id %>
        </a>

        <a href="/delete_pack_comment_from_pack/<%= pack_comment.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="furniture_pack_pack_comments_new_form">
        <%= render partial: "furniture_pack_templates/furniture_pack_pack_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
