<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Furniture pack #<%= @furniture_pack.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/furniture_packs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @furniture_pack.user %>
          <a href="/furniture_packs/<%= @furniture_pack.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit furniture_pack
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @furniture_pack.user %>
          <a href="/delete_furniture_pack/<%= @furniture_pack.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete furniture_pack
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @furniture_pack.description %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @furniture_pack.user.present? %>
          <a href="/users/<%= @furniture_pack.user_id %>">
            <%= @furniture_pack.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @furniture_pack.price %>
      </dd>

      <dt>
        Number of items
      </dt>
      <dd>
        <%= @furniture_pack.number_of_items %>
      </dd>

      <dt>
        Storage conditions
      </dt>
      <dd>
        <%= @furniture_pack.storage_conditions %>
      </dd>

      <dt>
        Apartment sq footage
      </dt>
      <dd>
        <%= @furniture_pack.apartment_sq_footage %>
      </dd>

      <dt>
        Apartment number of bedrooms
      </dt>
      <dd>
        <%= @furniture_pack.apartment_number_of_bedrooms %>
      </dd>

      <dt>
        Apartment number of bathrooms
      </dt>
      <dd>
        <%= @furniture_pack.apartment_number_of_bathrooms %>
      </dd>

      <dt>
        Apartment building name
      </dt>
      <dd>
        <%= @furniture_pack.apartment_building_name %>
      </dd>

      <dt>
        Apartment
      </dt>
      <dd>
        <% if @furniture_pack.apartment.present? %>
          <a href="/apartments/<%= @furniture_pack.apartment_id %>">
            <%= @furniture_pack.apartment.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@furniture_pack.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@furniture_pack.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "furniture_pack_templates/furniture_pack_furtniture_objects" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "furniture_pack_templates/furniture_pack_pack_bookmarks" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "furniture_pack_templates/furniture_pack_furniture_categories" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "furniture_pack_templates/furniture_pack_pack_comments" %>
  </div>
</div>
